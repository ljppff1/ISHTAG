            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:src="@drawable/t11"
            android:id="@+id/mTIvt41f"
            />
                
               <View 
                        android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="35dp"
            
            />
                <ImageView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
