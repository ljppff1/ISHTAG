                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/a34"
                android:id="@+id/mTIvt41o1"
                android:layout_toLeftOf="@id/mTIvt41n1"
                android:textColor="@color/black"
                android:textSize="@dimen/smallb"
                />
                        </RelativeLayout>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a32"
                android:id="@+id/mTIvt41r"
                android:layout_alignParentLeft="true"
                android:textColor="@color/aamy1"
                android:textSize="@dimen/smallb"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a33"
                android:layout_alignParentRight="true"
                android:id="@+id/mTIvt41o1a"
                android:textColor="@color/aamy1"
                android:textSize="@dimen/smallb"
                />
        </RelativeLayout>
        
        </LinearLayout>    
</ScrollView>
<RelativeLayout 
