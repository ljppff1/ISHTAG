                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/a35"
                android:id="@+id/mTIvt41o"
                android:layout_toLeftOf="@id/mTIvt41n"
                android:textColor="@color/black"
                android:textSize="@dimen/smallb"
                />
                                <ImageView 
                    android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                    android:src="@drawable/t9"
                    android:id="@+id/mTIvt41n1"
                                    android:layout_toLeftOf="@id/mTIvt41o"
                    
                    />
